{
	"compilerOptions": {
		"allowJs": true,
	  "module": "commonjs",
	  "noImplicitAny": false,
	  "removeComments": true,
	  "preserveConstEnums": true,
	  "outDir": "build",
	  "strictNullChecks": true,
	  "sourceMap": true,
		"target": "es5",
		"jsx": "preserve",
		"lib": ["es5", "es2015", "dom", "scripthost"]
	},
	"include": [
	  "server/**/*"
	],
	"exclude": [
		"**/*.spec.ts",
		"node_modules",
		"**/node_modules/*"		
	]
  }